@using Pharmacy.Models;
@model List<THUOC>
@{
    ViewBag.Title = "Shop";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="bg-light py-3">
    <div class="container">
        <div class="row">
            <div class="col-md-12 mb-0"><a href="Index">Trang chủ</a> <span class="mx-2 mb-0">/</span> <strong class="text-black">Dược mỹ phẩm</strong></div>
        </div>
    </div>
</div>

<div class="site-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <h3 class="mb-3 h6 text-uppercase text-black d-block">Bộ lọc theo giá tiền</h3>
                <div id="slider-range" class="border-primary"></div>
                <input type="text" name="text" id="amount" class="form-control border-0 pl-0 bg-white" disabled="" />
            </div>
            <div class="col-lg-6">
                <h3 class="mb-3 h6 text-uppercase text-black d-block">Bộ lọc theo yêu cầu</h3>
                <button type="button" class="btn btn-secondary btn-md dropdown-toggle px-4" id="dropdownMenuReference"
                        data-toggle="dropdown">
                    Yêu cầu
                </button>
                <div class="dropdown-menu" aria-labelledby="dropdownMenuReference">
                    <a class="dropdown-item" href="#">Độ liên quan</a>
                    <a class="dropdown-item" href="#">Tên, A đến Z</a>
                    <a class="dropdown-item" href="#">Tên, Z đến A</a>
                    <div class="dropdown-divider"></div>
                    <a class="dropdown-item" href="#">Giá tiền, thấp tới cao</a>
                    <a class="dropdown-item" href="#">Giá tiền, cao tới thấp</a>
                </div>
            </div>
        </div>

        <div class="row">
            @foreach (THUOC it in Model)
            {
                <div class="col-sm-6 col-lg-4 text-center item mb-4">
                    @*<span class="tag">Giảm giá</span>*@
                    <a href="1 thuốc.html"> <img src="~/Assets/images/product_01.png" alt="Image"></a>
                    <h3 class="text-dark"><a href="#">@it.TenThuoc</a></h3>
                    <p class="price"><del>@it.DonGia đ</del> &mdash; <font color="red"><b>55.000₫</b></font></p>
                </div>
            }
        </div>
        <div class="row mt-5">
            <div class="col-md-12 text-center">
                <div class="site-block-27">
                    <ul>
                        <li><a href="Shop">&lt;</a></li>
                        <li class="active"><span>1</span></li>
                        <li><a href="Shop">2</a></li>
                        <li><a href="Shop">3</a></li>
                        <li><a href="Shop">4</a></li>
                        <li><a href="Shop">5</a></li>
                        <li><a href="Shop">&gt;</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.Partial("~/Views/Home/PartialView/Comments.cshtml");